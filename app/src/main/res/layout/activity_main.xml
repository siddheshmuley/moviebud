<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moviebud.MainActivity"
    >
    <RelativeLayout
        android:id="@+id/tutorial_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.75">
        <TextView
            android:id="@+id/tutorial_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tutorial_1"
            android:textColor="#2359be"
            android:layout_margin="24dp"
            android:textSize="24dp"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans"
            />
        <RelativeLayout
            android:id="@+id/base_relative"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-4dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/skip_tutorial"
                android:layout_toLeftOf="@id/circlebound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:text="SKIP"
                android:layout_marginRight="24dp"
                android:background="#2359be"
                android:alpha="1"/>
            <TextView
                android:id="@+id/circlebound"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/circle"
                />
            <Button
                android:id="@+id/next"
                android:layout_toRightOf="@id/circlebound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:text="NEXT"
                android:background="#2359be"
                android:layout_marginLeft="24dp"
                android:alpha="1"/>
        </RelativeLayout>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_horizontal"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:indeterminate="true"
        android:layout_marginTop="-13dp"
        android:visibility="invisible"
        android:elevation="6dp"/>
    <ListView
        android:id="@+id/chatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="alwaysScroll"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        />
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:theme="@style/CircularProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:visibility="invisible"
        android:elevation="6dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_mic_white_24dp"
        app:fabSize="normal"
        android:visibility="invisible"
        app:rippleColor="#ed36ed"
        android:alpha="0.5"
        />
</RelativeLayout>
